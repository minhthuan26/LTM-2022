<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane fx:id="filmPane" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ltm2022client.application.FilmItemCotroller">
   <children>
      <VBox fx:id="filmInfoPane" prefHeight="400.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="posterImg" fitHeight="280.0" fitWidth="400.0" pickOnBounds="true">
               <image>
                  <Image url="@images/RED.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Name:" />
                  <Label fx:id="nameLbl" prefWidth="300.0" text="RED" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Year:" />
                  <Label fx:id="yearLbl" prefWidth="300.0" text="2010" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Gern:" />
                  <Label fx:id="gernLbl" prefWidth="300.0" text="Action, Humor" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Actors:" />
                  <Label fx:id="actorLbl" prefWidth="300.0" text="Ronaldo, Messi" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Dicrector:" />
                  <Label fx:id="directorLbl" prefWidth="300.0" text="Kylian Mbape" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="IMDB:" />
                  <Label fx:id="imdbLbl" prefWidth="300.0" text="10" />
               </children>
            </HBox>
            <HBox prefHeight="110.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Description:" />
                  <TextArea fx:id="desTxf" minHeight="110.0" prefHeight="110.0" prefWidth="300.0" wrapText="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <Label prefWidth="100.0" text="Trailer:" />
                  <Button fx:id="trailerBtn" mnemonicParsing="false" prefWidth="300.0" text="Play">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Icons/play_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
